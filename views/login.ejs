<section class=" flex justify-center  pt-24 ">
    
    <div class="login w-full max-w-xs ">
        <form action="/login" method="post" class=" shadow-md rounded  px-8 pt-12 pb-12 mb-4">
            
            <div class="mb-4">
                <label class="block  text-sm font-bold mb-2" for="username">
                    Email
                </label>
                <input name="email"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" type="email" placeholder="Enter your email">
            </div>
            <div class="mb-6">
                <label class="block  text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input name="password"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="password" placeholder="******************">
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="btn-primary rounded-full  font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Log In
                </button>
                <a class="inline-block align-baseline font-bold text-sm" href="/signup">
                    Don't have account?
                </a>
            </div>
        </form>
        <p class="text-center text-white text-xs">
            &copy;2020 Farm Ltd. All rights reserved.
        </p>
    </div>
</section>