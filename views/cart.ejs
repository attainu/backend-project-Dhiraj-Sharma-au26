
<section class="cart">
    <%if (session.cart){%>

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b ">
            <img src="/img/cart-black.png" alt="">
            <h1>Order Summery</h1>
        </div>


        <div class="pizza-list my-8">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center mb-4">
                <div>
                    <img class="w-24" src="<%= pizza.item.image %>" alt="">
                </div>
                <div class=" flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size%></span>
                </div>
                <span class="flex-1"><%= pizza.qty%> pcs</span>
                <span class="font-bold">$ <%= pizza.item.price * pizza.qty%></span>
            </div>
            <%  } %>
        </div>
       

        
        <hr>
        <div class="text-right py-4">
            <div>
                <span>Total:</span>
                <span class="amount text-xl mb-4 font-bold">$ <%= session.cart.totalPrice%></span>
            </div>
            
            <div>
                <%if (user) {%>
                <form action="/order" method="post">
                    <div>
                        <span>All field</span>
                    </div>
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Your mobile number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Your address">
                    <div>
                        
                            <button class="btn-primary text-white px-4 py-2 rounded-full">Order now</button>
                        
                    </div>
                    
                </form>
                <%}else{%>
                    <div class="mt-4">
                            
                        <a href="/login" class="btn-primary text-white px-6 py-2  rounded-full">Login to continue</a>
                    </div>
                <%}%>  
            </div>
            
            

        </div>
    </div>
    <%}else{%>









    <div class="empty-cart py-12">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mx-auto">Cart Empty !</h1>
            <p class="text-gray-500 mb-12">You probably haven't ordered a pizza yet. <br> To order a pizza,go to main page.</p>
            <img class="w-2/6 mx-auto" src="/img/empty-cart.png" alt="">
            <button><a class="inline-block rounded-full btn-primary px-4 py-2 mt-4 text-white " href="/">Go Back</a></button>
        </div>
    </div>
    <%}%>
</section>